@{
}
@model StudentPortal.Web.Models.AddStudentViewModel;

<h1>Add Student</h1>

<form  method="post">
<div class="mt-3">
    <label class="form-label">
        Name
    </label>
    <input type="text" asp-for="name" class="form-control" />
</div>

<div class="mt-3">
<label class="form-label">
    Email
</label>
<input type="text" asp-for="email" class="form-control" />
</div>

<div class="mt-3">

    <input type="checkbox" class="form-check-label" asp-for="Subscribed" for="Subscribed" />
    <label>
        Subscribed
    </label>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>