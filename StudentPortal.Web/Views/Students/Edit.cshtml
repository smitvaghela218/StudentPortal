@{
}
@model StudentPortal.Web.Models.Entities.Student;

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>
        No Student is Found with this ID
    </p>
}
@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">
                Id
            </label>
            <input type="text" asp-for="ID" class="form-control" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">
                Name
            </label>
            <input type="text" asp-for="name" class="form-control" />
        </div>

        <div class="mt-3">
            <label class="form-label">
                Email
            </label>
            <input type="text" asp-for="email" class="form-control" />
        </div>
        <div class="mt-3">

            <input type="checkbox" class="form-check-label" asp-for="Subscribed" for="Subscribed" />
            <label>
                Subscribed
            </label>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary" >Save</button>
            <button class="btn btn-danger" asp-action="Delete" asp-controller="Students">Delete</button>
        </div>
    </form>
}